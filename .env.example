# ===========================================
# OpenSchool Environment Variables
# ===========================================
# Copy this file to .env.local and fill in values

# -----------------------------
# Supabase
# -----------------------------
NEXT_PUBLIC_SUPABASE_URL=[https://your-project.supabase.co](https://your-project.supabase.co)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key  # Server-only!

# -----------------------------
# Database
# -----------------------------
DATABASE_URL=postgresql://postgres:[password@db.your-project.supabase.co:5432](mailto:password@db.your-project.supabase.co:5432)/postgres
DATABASE_URL_SERVICE_ROLE=postgresql://postgres:[password@db.your-project.supabase.co:5432](mailto:password@db.your-project.supabase.co:5432)/postgres

# -----------------------------
# App
# -----------------------------
NEXT_PUBLIC_APP_URL=[http://localhost:3000](http://localhost:3000)
NODE_ENV=development

# -----------------------------
# Optional: Sentry
# -----------------------------
# SENTRY_DSN=
# SENTRY_ORG=
# SENTRY_PROJECT=

# -----------------------------
# Optional: Upstash Redis
# -----------------------------
# UPSTASH_REDIS_REST_URL=
# UPSTASH_REDIS_REST_TOKEN=

